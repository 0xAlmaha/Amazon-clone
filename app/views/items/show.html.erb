<p style="color: green"><%= notice %></p>

<%= image_tag(@item.cover, size: "200x200")%>
 <%= button_to "Destroy this attachment", delete_attachments_item_url(@item.cover.signed_id),
    :method => :delete %>

<%= render @item %>

<%= @item.uploads.each do |upload|%>
<% if upload.representable?%>
<%= image_tag upload.representation(resize_to_limit: [200, 200]) %>
<%= image_tag (upload)%>
<%end%>

 <%= button_to "Destroy this attachment", delete_attachments_item_url(upload.signed_id),
    :method => :delete %>

<%end%>

<%= render @item %>
<div>
  <%= link_to "Edit this item", edit_item_path(@item) %> |
  <%= link_to "Back to items", items_path %>

  <%= button_to "Destroy this item", @item, method: :delete %>
</div>
